---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <h3><%= link_to article.title, article %> - <span><%= article.date.strftime('%b %e, %Y') %></span></h3>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>
